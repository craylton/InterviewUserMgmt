@model UserManagement.Web.Models.Logs.LogDetailViewModel
@{
    ViewData["Title"] = "Log Details";
}

<div class="row">
    <div class="col-12">
        <h1>Log Details</h1>
        
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <strong>Log ID:</strong>
                    </div>
                    <div class="col-md-9">
                        @Model.Id
                    </div>
                </div>
                
                <div class="row mt-2">
                    <div class="col-md-3">
                        <strong>User ID:</strong>
                    </div>
                    <div class="col-md-9">
                        <a href="/users/@Model.UserId">@Model.UserId</a>
                    </div>
                </div>
                
                <div class="row mt-2">
                    <div class="col-md-3">
                        <strong>Action:</strong>
                    </div>
                    <div class="col-md-9">
                        <span class="badge @(Model.Action switch 
                        { 
                            UserManagement.Models.ChangeActionType.Add => "bg-success",
                            UserManagement.Models.ChangeActionType.Update => "bg-warning",
                            UserManagement.Models.ChangeActionType.Delete => "bg-danger",
                            _ => "bg-secondary"
                        })">
                            @Model.Action
                        </span>
                    </div>
                </div>
                
                <div class="row mt-2">
                    <div class="col-md-3">
                        <strong>Timestamp:</strong>
                    </div>
                    <div class="col-md-9">
                        @Model.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="row mt-2">
                        <div class="col-md-3">
                            <strong>Description:</strong>
                        </div>
                        <div class="col-md-9">
                            @Model.Description
                        </div>
                    </div>
                }
            </div>
        </div>
        
        <div class="mt-3">
            @if (!string.IsNullOrEmpty(Model.ReturnTo))
            {
                <a href="@Html.Raw(Model.ReturnTo)" class="btn btn-secondary">Back</a>
            }
            else
            {
                <a href="/logs" class="btn btn-secondary">Back to Logs</a>
            }
        </div>
    </div>
</div>
