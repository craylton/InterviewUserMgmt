@using UserManagement.Data.Entities
@model UserManagement.Web.Models.Users.UserDetailsViewModel
@{
    ViewData["Title"] = "View User";
}

<h2>View User</h2>

<div class="row">
    <div class="col-md-6">
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">ID</label>
            <div class="col-sm-8">
                <div class="form-control-plaintext">@Model.User.Id</div>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="User.Forename" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <div class="form-control-plaintext">@Model.User.Forename</div>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="User.Surname" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <div class="form-control-plaintext">@Model.User.Surname</div>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="User.Email" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <div class="form-control-plaintext">@Model.User.Email</div>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="User.DateOfBirth" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <div class="form-control-plaintext">@Model.User.DateOfBirth.ToString("yyyy-MM-dd")</div>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="User.IsActive" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <div class="form-control-plaintext">@(Model.User.IsActive ? "Yes" : "No")</div>
            </div>
        </div>

        <div class="form-group">
            <a asp-action="List" class="btn btn-secondary">List</a>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <h3>Change History</h3>

        @if (Model.Logs.Items.Any())
        {
            <table class="table table-sm table-striped">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Timestamp</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model.Logs.Items)
                    {
                        <tr>
                            <td>
                                <span class="badge @(log.Action switch
                                {
                                    ChangeActionType.Add => "bg-success",
                                    ChangeActionType.Update => "bg-warning",
                                    ChangeActionType.Delete => "bg-danger",
                                    _ => "bg-secondary"
                                })">
                                    @log.Action
                                </span>
                            </td>
                            <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>
                                <a href="/logs/@log.Id?returnTo=@System.Web.HttpUtility.UrlEncode($"/users/{Model.User.Id}?page={Model.Logs.PageNumber}")" class="btn btn-sm btn-outline-primary">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (Model.Logs.TotalPages > 1)
            {
                <nav aria-label="User log pagination">
                    <ul class="pagination justify-content-center">
                        @if (Model.Logs.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="/users/@Model.User.Id?page=@(Model.Logs.PageNumber - 1)">Previous</a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.Logs.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Logs.PageNumber ? "active" : "")">
                                <a class="page-link" href="/users/@Model.User.Id?page=@i">@i</a>
                            </li>
                        }

                        @if (Model.Logs.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="/users/@Model.User.Id?page=@(Model.Logs.PageNumber + 1)">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="alert alert-info">
                <p>No change history found for this user.</p>
            </div>
        }
    </div>
</div>
