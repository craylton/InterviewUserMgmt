@model UserManagement.Web.Models.Users.UserViewModel
@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<div class="alert alert-warning" role="alert">
    <strong>Warning!</strong> This action cannot be undone.
</div>

<div class="row">
    <div class="col-md-6">
        <p>Are you sure you want to delete <strong>@Model.Forename @Model.Surname</strong>?</p>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">ID</label>
            <div class="col-sm-8">
                <div class="form-control-plaintext">@Model.Id</div>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Forename" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <div class="form-control-plaintext">@Model.Forename</div>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Surname" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <div class="form-control-plaintext">@Model.Surname</div>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Email" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <div class="form-control-plaintext">@Model.Email</div>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="DateOfBirth" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <div class="form-control-plaintext">@Model.DateOfBirth.ToString("yyyy-MM-dd")</div>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="IsActive" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <div class="form-control-plaintext">@(Model.IsActive ? "Yes" : "No")</div>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-danger" />
                <a asp-action="List" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
